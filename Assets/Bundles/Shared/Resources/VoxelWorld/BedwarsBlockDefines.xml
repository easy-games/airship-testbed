<!-- There are special maps available -->
<!-- texture_n  Normal map  -->
<!-- texture_r  Roughness map, 0 is glossy/reflective, 0.25 has a small specular circle, 0.5 big specular circle, 1.0 fully rough (matte)  -->
<!-- texture_m  Metal map, 0 is non metallic, 1 is metallic.  Metal has colored anodized specular and shine -->
<!-- texture_e  Emissive map, 1 is emissive/fullbright. If you want it to bloom, the underlaying diffuse color needs to be relatively bright -->
<!-- if you do not supply the maps, you can specify a constant value directly using <Metallic>0</<Metallic> or <Roughness>1</Roughness> or <Emissive>1</Emissive> etc -->

<Blocks>
  <RootAssetPath>@Easy/Core/Shared/Resources/VoxelWorld</RootAssetPath>
  <Scope>@Easy/Bedwars</Scope>

  <Block>
    <Index>128</Index>
    <Id>EXAMPLE_BLOCK</Id>
    <Name>TestExampleBlock</Name>
    <Material>StylizedGrass</Material>
    <Solid>true</Solid>
    <Metallic>0</Metallic>
    <Roughness>1</Roughness>
    <Brightness>1</Brightness>
  </Block>
</Blocks>

