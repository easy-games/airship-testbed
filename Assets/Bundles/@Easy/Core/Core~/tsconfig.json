{
	"compilerOptions": {
		// required
		"allowSyntheticDefaultImports": true,
		"downlevelIteration": true,
		"jsx": "react",
		"jsxFactory": "Roact.createElement",
		"jsxFragmentFactory": "Roact.Fragment",
		"module": "commonjs",
		"moduleResolution": "Node",
		"noLib": true,
		"resolveJsonModule": true,
		"experimentalDecorators": true,
		"forceConsistentCasingInFileNames": true,
		"moduleDetection": "force",
		"strict": true,
		"target": "ESNext",
		"typeRoots": ["node_modules/@rbxts", "node_modules/@easy-games", "../../../Types~/"],

		// configurable
		// "rootDirs": ["src/Server", "src/Client", "src/Shared"],
		"outDir": "../",
        "paths": {
            "@*": [
                "../../../../Types~/@*"
            ],
            "Client/*": ["./Client/*"],
            "Server/*": ["./Server/*"],
            "Shared/*": ["./Shared/*"]
        },
		"baseUrl": "src",
		"incremental": false,
        "skipLibCheck": true,
		"plugins": [
            // { "transform": "@easy-games/unity-component-transformer" },
			{ "transform": "@easy-games/unity-flamework-transformer" },
		],
	},
    "include": [
        // "../../Types~/**/*.d.ts",
        "src/**/*"
, "../../../../Typescript~/src/Server/Services/Global/Block", "../../../../Typescript~/src/Shared/Signals", "../../../../Typescript~/src/Client/Controllers/Abilities", "../../../../Typescript~/src/Shared/Abilities/Ability.ts", "../../../../Typescript~/src/Shared/Abilities/AbilityLogic.ts", "../../../../Typescript~/src/Shared/Abilities/AbilitySlot.ts", "../../../../Typescript~/src/Shared/Abilities/AbilityUtil.ts", "../../../../Typescript~/src/Server/Services/Abilities"    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ],
	"rbxts": {
        "rojo": "./default.project.json",
		"includePath": "../Bundles/Shared/Resources/include",
        "type": "airshipbundle",
        "copyNodeModules": true
	},
}